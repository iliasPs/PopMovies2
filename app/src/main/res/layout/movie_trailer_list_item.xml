<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/eight_dp"
    android:elevation="@dimen/four_dp"
    app:cardElevation="@dimen/four_dp"
    >

    <android.support.constraint.ConstraintLayout
       android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/trailer_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_report_image"/>

        <TextView
            android:id="@+id/trailer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_text_padding_vertical"
            android:layout_marginTop="@dimen/card_text_padding_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="@dimen/card_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/trailer_thumb"
            app:layout_constraintStart_toStartOf="@+id/trailer_thumb"
            app:layout_constraintTop_toBottomOf="@+id/trailer_thumb"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Movie Title"/>

    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>